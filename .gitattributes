# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
requirements.txt text eol=lf

# JavaScript/Node
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.jsonc text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Shell
*.sh text eol=lf
*.bash text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.wav binary
